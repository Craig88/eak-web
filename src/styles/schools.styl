@import "variables"

.schools__item

    font-size 18px
    background #fff

    .row
        display flex
        flex-direction column

    img
        width 300px
        margin-left 30px

    .col-md-12
        padding-top 20px
        padding-bottom 20px

    &:last-of-type
        .col-md-12
            padding-bottom 80px

    .heading

        padding-bottom 0

        h2
            margin-bottom 10px

    .schools__item__image

        display flex
        justify-content: center
        align-items center
        padding-top 3em
        position relative

        .price-badge
            position absolute
            left 25px
            top 0
            width 20%
            margin-left 0

    @media screen and (min-width: screen-sm-min)

        .schools__item__image
            padding-top 0

        .row
            flex-direction row-reverse

    .schools__item__cta

        font-size: 0.9em;
        text-align center
        color eakPurple
        a
            color eakPurple

            &:hover
                text-decoration underline
