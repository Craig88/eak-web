@import "variables"

.schools__item

    font-size 20px
    background #fff
    margin-bottom 10px

    .row
        display flex
        flex-direction column

    img
        max-width 80%

    .col-md-12
        padding-top 40px
        padding-bottom 40px

    &:last-of-type
        .col-md-12
            padding-bottom 80px

    .heading

        padding-bottom 0

        h2
            margin-bottom 10px

    .schools__item__image

        display flex
        justify-content: center
        align-items center
        padding-top 3em
        position relative

        .price-badge

            position absolute
            right 25px
            top 0

    @media screen and (min-width: screen-sm-min)

        .schools__item__image
            padding-top 0

        .row
            flex-direction row-reverse
