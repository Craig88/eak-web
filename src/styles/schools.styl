@import "variables"

.schools__item

    font-size 20px
    background #fff

    .row
        display flex
        flex-direction column

    img
        max-width 80%

    .col-md-12
        padding-top 40px
        padding-bottom 40px

    &:last-of-type
        .col-md-12
            padding-bottom 80px

    .heading

        padding-bottom 0

        h2
            margin-bottom 10px

    .schools__item__image

        display flex
        justify-content: center
        align-items center
        padding-top 3em

    @media screen and (min-width: screen-sm-min)

        .schools__item__image
            padding-top 0

        .row
            flex-direction row-reverse


.benefits

    background rgba(#fff, 0.5)
    margin 10px;

    .schools__item

        background transparent

    .row
        display block

    .schools__item__content

        padding 2em;
        padding-top 1em
        padding-bottom 0
        margin 10px;

        h2

            margin-bottom 1.5em
            text-align left

        ul
            padding-left 20px

            li
                margin-bottom 2em
                align-items center

                img
                    display none

        @media screen and (min-width: screen-sm-min)

            margin-left 0
            margin-right 0

            ul
                padding-left 20px

        @media screen and (min-width: screen-sm-min)

            ul
                list-style none

                li
                    margin-bottom 2em
                    display flex
                    align-items center

                    img
                        display block
                        width 40px
                        margin-right 10px
