@import "variables"

.landing
  background-color eakSkyBlue

  .container
    position relative
    width 100%
    min-height 100%

    &:after
      content " "
      position absolute
      z-index 1
      bottom 0
      display block
      width 100%
      height 100%
      background-image url(/img/simple-bg-light.jpg)
      background-size 450px auto
      background-position bottom
      background-repeat no-repeat

  header
    width 19em
    margin auto
    margin-top 0
    padding-top 20px
    font-size 0.6em
    text-align center
    font-family brandFont

    h1
      font-size 4.9em
      line-height 1.3em

    h2
      font-size 1em

  main
    position relative
    width 90%
    margin 0 auto
    padding-bottom 140px
    z-index 2
    color #333

  #signup
    a
      color blue

    h3
      margin-top 30px
      font-size 24px
      text-align center

    h4
      font-size 20px

    p
      margin-top 20px
      font-size 16px
      font-weight 300
      opacity 0.8

    form
        padding-top 20px

    #signed-up-go
      display inline-block
      text-decoration none
      float none
      margin-left auto
      border-radius 5px
      margin-top 15px
      font-size 16px

  .kitten-count
    z-index 3
    top auto
    bottom 66px
    font-size 15px
    width 141px

  @media screen and (min-width: 450px)
    .container:after
      background-size 600px auto

    main
      width 415px
      padding-bottom 175px

    header
      padding-top 40px
      font-size 0.7em

    .kitten-count
      bottom 92px
      font-size 19px
      width 187px

  @media screen and (min-width: 600px)
    .container
      background-image url(/img/simple-bg-strip-light.png)
      background-size 1px 183.2px
      background-position bottom
      background-repeat repeat-x

      &:after
        background-image url(/img/simple-bg-large-light.jpg)
        background-size 1000px auto

    main
      padding-bottom 200px

    .kitten-count
      bottom 112px
      font-size 24px
      width 234px

  @media screen and (min-width: 900px)
    main
      width 800px
      padding-top 100px
      padding-bottom 430px

    header
      margin 0
      padding 0
      float left
      font-size 0.7em

    #signup
      float right
      width 510px
      text-align right
      padding-top 11px

      h3
        margin 0

      h3, p
        text-align inherit

  @media screen and (min-width: 1200px)
    .container
      background-size 1px 219px

      &:after
        background-size 1200px auto

    #signup
      width 600px

    main
      width 1100px

    header
      font-size 0.8em

    #signup
      padding-top 5px

      h3
        font-size 29px

    .kitten-count
      bottom 137px
      font-size 29px
      width 282px

  @media screen and (min-width: 1400px)
    .container
      background-size 1px 255px

      &:after
        background-size 1400px auto

    main
      padding-bottom 550px

    .kitten-count
      bottom 162px
      font-size 34px
      width 329px

