@import "variables"

.parents__item

    font-size 18px
    background #dcf7f6

    .row
        flex-direction row

    img
        max-width 80%

    &:nth-of-type(odd)

        background #fff

        .row
            flex-direction row-reverse

    .col-md-12
        padding-top 40px
        padding-bottom 40px

    &:last-of-type
        .col-md-12
            padding-bottom 80px

    @media screen and (min-width: screen-sm-min)
        .row
            display: flex
            align-items center

    .heading

        padding-bottom 0

        h2
            margin-bottom 10px

    .parents__item__image

        display flex
        justify-content: center
        align-items center
        padding-top 3em

    @media screen and (min-width: screen-sm-min)
        .parents__item__image
            padding-top 0

.benefits

    background rgba(#fff, 0.5)
    margin 10px;

    .parents__item
        background transparent

    .parents__item__content

        padding 2em;
        padding-top 1em
        margin 10px;

        h2

            margin-bottom 1.5em
            text-align left

        ul
            padding-left 20px

            li
                margin-bottom 2em
                align-items center

                img
                    display none

        @media screen and (min-width: screen-sm-min)

            margin-left 0
            margin-right 0

            ul
                list-style none
                padding-left 20px

                li
                    margin-bottom 2em
                    display flex
                    align-items center

        @media screen and (min-width: screen-sm-min)

            ul
                li
                    img
                        display block
                        width 40px
                        margin-right 10px

        @media screen and (min-width: screen-lg-min)

            background url('/img/parents/butstacks.png') bottom 30px right 50px no-repeat

            ul
                max-width 55%
