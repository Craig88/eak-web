@import "variables"

.landing
  background-color darkEakPurple

  .container
    position relative
    width 100%
    min-height 100%

    &:after
      content " "
      position absolute
      z-index 1
      bottom 0
      display block
      width 100%
      height 100%
      background-image url(/img/landing-bg.jpg)
      background-size 450px auto
      background-position bottom
      background-repeat no-repeat

    main
      color white
      position relative
      z-index 2

  header
    width 19em
    text-align center
    font-family brandFont

    h1
      font-size 4.9em
      line-height 1.3em

    h2
      font-size 1em

  @media screen and (min-width: 450px)
    .container:after
      background-size 600px auto

  @media screen and (min-width: 600px)
    .container
      background-image url(/img/landing-bg-strip.png)
      background-size 1px 183.2px
      background-position bottom
      background-repeat repeat-x

      &:after
        background-image url(/img/landing-bg-large.jpg)
        background-size 1000px auto

  @media screen and (min-width: 1200px)
    .container
      background-size 1px 219px

      &:after
        background-size 1200px auto

  @media screen and (min-width: 1400px)
    .container
      background-size 1px 255px

      &:after
        background-size 1400px auto

    main
      width 1100px
      margin 0 auto
      padding-top 100px
      padding-bottom 550px

    header
      float left

    #signup
      float right
      width 510px
      text-align right
      padding-top 5px

      a
        color lighten(blue, 70%)

      h3
        font-size 29px

      h4
        font-size 20px

      p
        margin-top 20px
        font-size 16px
        font-weight 300
        opacity 0.7

      form
        padding-top 40px
        float right

      .form-group
        > *
          float left

        button, input, label
          display block
          height 40px
          padding 0 10px
          margin 0
          line-height 40px
          font-family inherit
          font-size inherit
          background none
          border none
          color white

        button, input
          background rgba(lightEakPurple, 0.3)
          border 2px solid rgba(lightEakPurple, 0.4)
          transition all 0.3s ease

          &:hover, &:focus
            background rgba(lighten(lightEakPurple, 20%), 0.5)

        radius = 5px
        button
          font-size 0.7em
          font-family brandFont
          cursor pointer
          border-top-right-radius radius
          border-bottom-right-radius radius

        input
          width 300px
          border-right none
          border-top-left-radius radius
          border-bottom-left-radius radius

        label
          font-size 0.8em
