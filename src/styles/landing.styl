@import "variables"

.landing
  background-color darkEakPurple

  .container
    position relative
    width 100%
    min-height 100%

    &:after
      content " "
      position absolute
      z-index 1
      bottom 0
      display block
      width 100%
      height 100%
      background-image url(/img/landing-bg.jpg)
      background-size 450px auto
      background-position bottom
      background-repeat no-repeat

  header
    width 19em
    margin auto
    margin-top 20px
    font-size 0.7em
    text-align center
    font-family brandFont

    h1
      font-size 4.9em
      line-height 1.3em

    h2
      font-size 1em

  main
    position relative
    width 90%
    margin 0 auto
    padding-bottom 140px
    z-index 2
    color white

  #signup
    a
      color lighten(blue, 70%)

    h3
      margin-top 30px
      font-size 24px
      text-align center

    h4
      font-size 20px

    p
      margin-top 20px
      font-size 16px
      font-weight 300
      opacity 0.7

    form
        padding-top 20px

    button, input, label
      display block
      height 40px
      padding 0 10px
      margin 0
      line-height 40px
      font-family inherit
      font-size inherit
      background none
      border none
      color white

    button, input
      background rgba(lightEakPurple, 0.3)
      border 2px solid rgba(lightEakPurple, 0.4)
      border-radius 5px
      transition all 0.3s ease

      &:hover, &:focus
        background rgba(lighten(lightEakPurple, 20%), 0.5)

    radius = 5px
    button
      margin auto
      margin-top 15px
      font-size 0.7em
      font-family brandFont
      cursor pointer

    input
      width 100%

    label
      margin 0
      padding 0
      font-size 0.8em

  @media screen and (min-width: 450px)
    .container:after
      background-size 600px auto

    main
      width 415px
      padding-bottom 175px

    header
      margin-top 40px
      font-size 0.9em

  @media screen and (min-width: 600px)
    .container
      background-image url(/img/landing-bg-strip.png)
      background-size 1px 183.2px
      background-position bottom
      background-repeat repeat-x

      &:after
        background-image url(/img/landing-bg-large.jpg)
        background-size 1000px auto

    main
      padding-bottom 200px

  @media screen and (min-width: 900px)
    main
      width 800px
      padding-top 100px
      padding-bottom 430px

    header
      margin 0
      float left
      font-size 0.75em

    #signup
      float right
      width 510px
      text-align right
      padding-top 11px

      h3
        margin 0

      h3, p
        text-align inherit

      form
        float right

      button, input, label
        float left

      button
        margin 0
        border-top-left-radius 0
        border-bottom-left-radius 0

      input
        width 300px
        border-right none
        border-top-right-radius 0
        border-bottom-right-radius 0

      label
        padding 0 10px

  @media screen and (min-width: 1200px)
    .container
      background-size 1px 219px

      &:after
        background-size 1200px auto

    main
      width 1100px

    header
      font-size 1em

    #signup
      padding-top 5px

      h3
        font-size 29px

  @media screen and (min-width: 1400px)
    .container
      background-size 1px 255px

      &:after
        background-size 1400px auto

    main
      padding-bottom 550px
